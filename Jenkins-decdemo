pipeline{
    agent any
    
    environment{
        PATH = "/opt/apache-maven-3.9.8/bin:$PATH" 
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: '4bcf1f8c-736b-4f3b-9af5-20179d1ae59f', url: 'https://github.com/bhanuprasadmarisetty/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['root'])  {
                sh "scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@54.160.90.26:/root/apache-tomcat-9.0.90/webapps"
            }
    }
}
}
}
